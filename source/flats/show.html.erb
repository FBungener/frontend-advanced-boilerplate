<% flat = data.flats[owner] %>
<!-- Inject flat data in template -->
<div class="flat-banner" style="background-image:url('<%= image_path flat.picture %>');"></div>
  <div class="header-flat">
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-6">
          <div class="flat-details">
            <div class="flat-owner text-center">
              <%= image_tag flat.owner_picture, class: "avatar avatar-large" %>
              <p><%= flat.owner_name %></p>
            </div>
            <div class="flat-name">
              <h3><%= flat.summary %></h3>
              <p><%= flat.city %></p>
            </div>
          </div>
        </div>


        <div class="col-xs-12 col-sm-4">
            <form action="">
              <h3>Book this flat</h3>
              <div class="form-group">
                <div class="row">
                  <div class="col-xs-6">
                    <input type="text" class="form-control" placeholder="check-in" id="check-in">
                  </div>
                  <div class="col-xs-6">
                    <input type="text" class="form-control" placeholder="check-out" id="check-out">
                  </div>
                </div>
              </div>
              <div class="form-group">
                <select name="" id="guests" class="form-control">
                  <option value="1">1 guest</option>
                  <option value="2">2 guests</option>
                  <option value="3">3 guests</option>
                </select>
              </div>
              <input type="submit" class="btn btn-danger" value="Book it" style="width: 100%;">
            </form>
        </div>
      </div>
    </div>
  </div>
</div>
